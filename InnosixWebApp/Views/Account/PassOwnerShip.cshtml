@model InnosixWebApp.Models.PassOwnerShipViewModel

@{
    ViewBag.Title = "Pass Owner Ship";
}

<h2>Pass Owner Ship</h2>

<div class="row mt-15">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-3">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="col-xs-9">
                <label class="text-dark">@Html.DisplayFor(model => model.Email)</label>
            </div>
        </div>
    </div>
</div>
<div class="row mt-15">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-3">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="col-xs-9">
                <label class="text-dark">@Html.DisplayFor(model => model.Description)</label>
            </div>
        </div>
    </div>
</div>
<div class="row mt-15">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-3">
                @Html.LabelFor(model => model.PhoneNumber, "Phone number")
            </div>
            <div class="col-xs-9">
                <label class="text-dark">@Html.DisplayFor(model => model.PhoneNumber)</label>
            </div>
        </div>
    </div>
</div>
<div class="form-horizontal mt-15">
    <div class="form-group row mt-15">
        <div class="col-md-6">
            @Html.ActionLink("Decline", "PassOwnerShipDecline", "Account", "", new { @class = "btn btn-default" })
        </div>
        <div class="col-md-6 text-right">
            @Html.ActionLink("Accept", "PassOwnerShipAccept", "Account", "", new { @class = "btn btn-primary", onclick = "return AcceptConfirm()" })
        </div>
    </div>
</div>

<script type="text/javascript">
    function AcceptConfirm() {
        var message = "Are you sure you want to pass ownership of this Tech Company?";

        if (confirm(message))
            return true;
        else
            return false;
    }
</script>
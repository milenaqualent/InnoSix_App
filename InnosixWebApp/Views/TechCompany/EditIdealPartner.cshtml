@model InnosixWebApp.Models.TCIdealPartner

@{
    ViewBag.Title = "Edit Ideal Partner";
}

<section class="edit-company-details">

    @Html.Partial("NavigationEditMenu")

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal edit-technology mt-15">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TCid)

            <div class="form-group">
                @Html.LabelFor(model => model.IdealCorporatePartnerNace, "Ideal partner nace code", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.IdealCorporatePartnerNace, new SelectList(ViewBag.Nace, "Id", "NACEcode", Model.IdealCorporatePartnerNace), "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdealCorporatePartnerNace, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdealCorporatePartnerName, "Ideal partner name", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.IdealCorporatePartnerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IdealCorporatePartnerName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdealCorporatePartnerTechnologyFocus, "Ideal partner technology focus", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.IdealCorporatePartnerTechnologyFocus, new SelectList(ViewBag.TechSector, "Id", "TechSectorName", Model.IdealCorporatePartnerNace), "", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdealCorporatePartnerTechnologyFocus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mt-15 btn-section">
                <div class="col-md-6">
                    @Html.ActionLink("Back", "Index", "TechCompany", null, new { @class = "btn btn-default" })
                </div>
                <div class="text-right col-md-6">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }    
</section>